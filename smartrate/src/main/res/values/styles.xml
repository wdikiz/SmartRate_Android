<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Style existant -->
    <style name="mydialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <!-- Nouveau style spécifique à SmartRate -->
    <style name="SmartRateDialog" parent="Theme.MaterialComponents.Dialog">
        <item name="android:windowMinWidthMajor">100%</item>
        <item name="android:windowMinWidthMinor">100%</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="SmartRateButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/smartrate_white</item>
        <item name="backgroundTint">@null</item>
        <item name="android:backgroundTint">@null</item>
        <item name="android:background">@drawable/round_corners_fill</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:textAllCaps">true</item>
        <item name="elevation">0dp</item>
    </style>

    <!-- Styles pour les éléments internes de SmartRate -->
    <style name="SmartRateTextStyle">
        <item name="android:textColor">@color/smartrate_main_color</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>


</resources>